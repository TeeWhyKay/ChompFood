<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.jen-eats.com/tanglin/images/restaurants-and-bars/banner.jpg);">
  <div class="container">
    <h1 class="py-2">ChompFood</h1>
    <p><strong>Crave it? Chomp it.</strong></p>
    <%= form_tag restaurants_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for restaurants near me" %>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class="container my-5">
  <h1>ChompFood Promos in <strong style="color: #00b14f">Singapore</strong></h1>
</div>


<div class="container mb-5 px-20">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src= <%= "https://source.unsplash.com/random/700x500?food&sig=#{rand(1..10)}" %> class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h3> <%= link_to @restaurants.first.name, restaurant_path(@restaurants.first), class:"btn btn-success", style:"text-decoration: none" %> </h3>
        </div>
      </div>


      <% @restaurants[1,4].each do |restaurant| %>
        <div class="carousel-item">
          <img src= <%= "https://source.unsplash.com/random/700x500?food&sig=#{rand(1..10)}" %> class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h3> <%= link_to restaurant.name, restaurant_path(restaurant), class:"btn btn-success", style:"text-decoration: none" %></h3>
          </div>
        </div>
      <% end %>


    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="footer">
  <div class="footer-copyright">
    @Chomp 2021
  </div>
</div>

