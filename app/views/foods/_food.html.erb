
  <div class="card-category d-flex align-items-center">
      <div class="d-flex align-items-center">
        <div>
          <img class="card-image ml-2" src= <%= food.photo_url %>>
          <% if @restaurant.promo_status == 1 %>
              <p class="card-price ml-3 mb-0 mt-2", style="text-decoration: line-through; color:red">$<%= food.price %></p>
              <p class="card-price ml-3 mb-0 mt-0">$<%= (food.price * 0.8).round(1) %></p>
          <% else %>
            <p class="card-price ml-3 mb-0 mt-3">$<%= food.price %></p>
          <% end %>
        </div>
        <div class="d-flex flex-column">
          <div class="card-details p-3">
            <h4><strong><%=h truncate(food.name, length: 15) %></strong></h4>
            <p><%=h truncate(food.description, length: 70) %></p>
          </div>

          <div class="d-flex justify-content-center">
            <button
              class="btn btn-primary btn-cart w-75 mt-1"
              data-toggle="modal"
              data-target="#exampleModal"
              data-restaurant-name="<%= food.restaurant.name%>"
              data-food-name="<%= food.name%>"
              data-food-price="<%= food.price%>"
              data-food-id="<%= food.id%>">
              Add to cart</button>
          </div>
        </div>
      </div>
  </div>

<%# Modal %>

<div
  class="modal fade" id="exampleModal" tabindex="-1"
  aria-labelledby="exampleModalLabel" aria-hidden="true"
  data-current-food-id="nil">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header flex-column">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-title" id="exampleModalLabel">Order</h5>
        <p class="text-muted modal-price">SGD</p>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="food-name" class="col-form-label">Quantity:</label>
            <input type="number" class="form-control" id="food-quantity">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Special Request:</label>
            <textarea class="form-control" id="special-instructions"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" data-dismiss="modal" class="btn btn-primary btn-modal">Add to Cart</button>
      </div>
    </div>
  </div>
</div>
