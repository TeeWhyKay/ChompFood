<div style="background-color: white">
  <div class="container py-3">
    <%= link_to "Home", "/" %> > <%= link_to "Restaurants", "/restaurants#index" %> > <%= @restaurant.name %>
    <h1 class="mt-3"><%= @restaurant.name %></h1>
      <% unchecked_stars = (5 - @restaurant.rating).to_i %>
      <% @restaurant.rating.times do |star| %>
        <span class="fa fa-star checked"></span>
      <% end %>
      <% unchecked_stars.times do |star| %>
        <span class="fa fa-star"></span>
      <% end %>
    <p>Cuisine: <%= @restaurant.cuisine %></p>
    <p>Operating Hours <%= @restaurant.opening_time.strftime('%I:%M %p') %> - <%= @restaurant.closing_time.strftime('%I:%M %p') %></p>
  </div>
</div>

<div class="container my-3">
  <div class="cards">
    <% @foods.each do |food| %>
      <div class="card-category">
        <div class="card-details my-3">
            <img class="card-image ml-2" src= <%= food.photo_url %>>
            <div class= "px-3">
                <div><strong><%= food.name %></strong></div>
                <div><%= food.description %></div>
            </div>
        </div>
        <div class="card-price mr-3">
          $<%= food.price %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="footer">
  <div class="footer-copyright">
    @Chomp 2021
  </div>
</div>
