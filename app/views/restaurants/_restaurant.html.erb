<div class="col-12 col-sm-6 col-md-4 col-xl-3">
  <div class="card-restaurant mb-3">
    <%= link_to restaurant_path(restaurant) do %>
      <img src= <%= "https://source.unsplash.com/random/?food&sig=#{rand(1..20)}" %>>
      <div class="card-restaurant-infos">
        <div>
          <h2><%= restaurant.name %></h2>
          <div class="basic_container"><%= restaurant.cuisine %>
          </div>

          <% unchecked_stars = (5 - restaurant.rating).to_i %>
          <% restaurant.rating.times do |star| %>
            <span class="fa fa-star checked"></span>
          <% end %>
          <% unchecked_stars.times do |star| %>
            <span class="fa fa-star"></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
